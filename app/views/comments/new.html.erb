<div class="topic-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">comment</h1> 
        <%= form_for @comment do |f| %>
          <%= f.hidden_field :user_id, value: @comment.user_id %>
          <%= f.hidden_field :topic_id, value: @comment.topic_id %>
          
          <div class="form-group">
            <%= f.label :contents %>
            <%= f.text_area :contents, class: 'form-control'%>
          </div>
          <!--非ログイン時、ボタン非表示-->
          <% if logged_in? %>
          <%= f.submit 'コメント投稿', class: 'btn btn-black btn-block' %>
          <% end %> 
      　<% end %>
      </div>
    </div>
  </div>    
</div>